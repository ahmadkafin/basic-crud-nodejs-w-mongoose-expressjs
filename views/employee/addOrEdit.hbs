<h3>{{viewTitle}}</h3>
<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label for="name">Full Name</label>
        <input type="text" name="fullName" class="form-control" placeholder="fullname" value="{{employee.fullName}}">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>

    <div class="form-group">
        <label for="name">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email" value="{{employee.email}}">
        <div class="text-danger">
            {{employee.emailError}}
        </div>    
    </div>

    <div class="form-group">
        <label for="name">Mobile</label>
        <input type="text" name="mobile" class="form-control" placeholder="Mobile" value="{{employee.mobile}}">
    </div>

    <div class="form-group">
        <label for="name">City</label>
        <input type="text" name="city" class="form-control" placeholder="Mobile" value="{{employee.city}}">
    </div>

    <div class="form-group my-4">
        <div class="row">
            <div class="col-md-6">
                <label for="name">Status Aktif</label>
                <input type="radio" name="status" value="true"/>
            </div>
            <div class="col-md-6">
                <label for="name">Status Tidak Aktif</label>
                <input type="radio" name="status" value="false"/>
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-info btn-sm">Submit</button>
        <a href="/employee/list" class="btn btn-secondary">Employee List</a>
    </div>
</form>